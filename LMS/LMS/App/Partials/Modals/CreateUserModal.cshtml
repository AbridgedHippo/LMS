@if (Request.IsAuthenticated)
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">Create New User</h4>
    </div>
    <div class="modal-body">
        <div class="form-div">
            <form>
                <ul class="list-inline list-unstyled">
                    <li><input class="form-control" required type="text" ng-model="$ctrl.newUser.FirstName" placeholder="First Name" /></li>
                    <li><input class="form-control" required type="text" ng-model="$ctrl.newUser.LastName" placeholder="Last Name" /></li>
                    <li>
                        <select class="form-control" ng-model="$ctrl.newUser.Role">
                            <option ng-repeat="role in $ctrl.roles" value="{{role.Name}}">{{role.Name}}</option>
                        </select>
                    </li>
                </ul>
            </form>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" ng-click="$dismiss()">Close</button>
        <button type="button" class="btn btn-primary" ng-click="$close()">Create User</button>
    </div>
}