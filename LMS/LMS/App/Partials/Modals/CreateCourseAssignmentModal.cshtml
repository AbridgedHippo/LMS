
@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close" ng-click="$dismiss()">
            <span aria-hidden="true">&times;</span>
        </button>
        <h4 class="modal-title">Add Assignment to {{ctrl.editCourse.Name}}</h4>
    </div>
    <div class="modal-body">
        <div class="form-div">
            <div class="form-group">
                <input class="form-control" ng-model="$ctrl.newAssignment.Name" />
                <input class="form-control" ng-model="$ctrl.newAssignment.Description" />
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-primary" ng-click="$dismiss()">Close</button>
        <button type="button" class="btn btn-primary" ng-click="$close()">Add</button>
    </div>
}
else
{
    Response.Redirect("~/");
}
